				"source": [
					"import pyspark\r\n",
					"from pyspark.sql import SparkSession\r\n",
					"from pyspark.ml.regression import LinearRegression\r\n",
					"from pyspark.ml.feature import VectorAssembler"
				],
				"execution_count": 3
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
						"outputs_hidden": false
					},
					"nteract": {
						"transient": {
							"deleting": false
						}
					}
				},
				"source": [
					"df.printSchema()"
				],
				"execution_count": 4
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
						"outputs_hidden": false
					},
					"nteract": {
						"transient": {
							"deleting": false
						}
					}
				},
				"source": [
					"featureassembler = VectorAssembler(inputCols = [\"year\",\"month\", \"day\",\"L_DISCOUNT\", \"L_QUANTITY\"], outputCol = \"Independent Features\")"
				],
				"execution_count": 5
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
						"outputs_hidden": false
					},
					"nteract": {
						"transient": {
							"deleting": false
						}
					}
				},
				"source": [
					"output = featureassembler.transform(df)\r\n",
					"output.select(\"Independent Features\").show()"
				],
				"execution_count": 7
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
						"outputs_hidden": false
					},
					"nteract": {
						"transient": {
							"deleting": false
						}
					}
				},
				"source": [
					"finalised_data = output.select(\"Independent Features\", \"O_TOTALPRICE\")"
				],
				"execution_count": 8
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
						"outputs_hidden": false
					},
					"nteract": {
						"transient": {
							"deleting": false
						}
					}
				},
				"source": [
					"train_data, test_data = finalised_data.randomSplit([0.75, 0.25])"
				],
				"execution_count": 9
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
						"outputs_hidden": false
					},
					"nteract": {
						"transient": {
							"deleting": false
						}
					}
				},
				"source": [
					"regressor = LinearRegression(featuresCol = 'Independent Features', labelCol = 'O_TOTALPRICE')\r\n",
					"regressor = regressor.fit(train_data)"
				],
				"execution_count": 11
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
						"outputs_hidden": false
					},
					"nteract": {
						"transient": {
							"deleting": false
						}
					}
				},
				"source": [
					"trainingSummary = regressor.summary\r\n",
					"print(\"RMSE: %f\" % trainingSummary.rootMeanSquaredError)\r\n",
					"print(\"r2: %f\" % trainingSummary.r2)"
				],
				"execution_count": 19
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
						"outputs_hidden": false
					},
					"nteract": {
						"transient": {
							"deleting": false
						}
					}
				},
				"source": [
					"pred_results = regressor.evaluate(test_data)\r\n",
					"pred_results.predictions.show()"
				],
				"execution_count": 12
			},
			{
				"cell_type": "code",
				"metadata": {
					"jupyter": {
						"source_hidden": false,
						"outputs_hidden": false
					},
					"nteract": {
						"transient": {
							"deleting": false
						}
					}
				},
				"source": [
					"lr_predictions = regressor.transform(test_data)\r\n",
					"lr_predictions.select(\"prediction\",\"O_TOTALPRICE\",\"Independent Features\").show(5)\r\n",
					"\r\n",
					"from pyspark.ml.evaluation import RegressionEvaluator\r\n",
					"lr_evaluator = RegressionEvaluator(predictionCol=\"prediction\", \\\r\n",
					"                 labelCol=\"O_TOTALPRICE\",metricName=\"r2\")\r\n",
					"print(\"R Squared (R2) on test data = %g\" % lr_evaluator.evaluate(lr_predictions))"
				],
				"execution_count": 18
			},
